{
  "name": "steam-account-manager",
  "version": "1.0.0",
  "main": "src/main.js",
  "description": "Steam Account Manager for managing Steam accounts in an internet cafe environment.",
  "author": "Murat Aktas <buy@deniznetcafe.com>",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "electron": "^32.0.1",  
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "path-browserify": "^1.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.yourname.steamaccountmanager",
    "productName": "Steam Account Manager",
    "files": [
      "src/**/*",
      "dist/**/*",
      "main.js",
      "index.html",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
